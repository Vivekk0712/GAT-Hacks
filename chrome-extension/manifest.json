{
  "manifest_version": 3,
  "name": "Dyslexia Mode",
  "version": "1.0.0",
  "description": "Toggle dyslexia-friendly text formatting on any webpage",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
